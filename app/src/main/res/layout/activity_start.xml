<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/holo_purple"
    android:gravity="center_vertical|center_horizontal">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/butStart"
        style="@style/ButtonText"
        android:layout_width="185dp"
        android:layout_height="185dp"
        android:backgroundTint="@android:color/holo_red_dark"
        android:insetLeft="0dp"
        android:textSize="25sp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:text="@string/start"
        app:cornerRadius="100dp"
        android:layout_margin="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/butSettings"
        style="@style/ButtonText"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:textSize="18sp"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:text="@string/settings"
        app:cornerRadius="100dp"
        app:layout_constraintBottom_toTopOf="@+id/butScore"
        app:layout_constraintStart_toEndOf="@+id/butScore" />

    <Button
        android:id="@+id/butScore"
        style="@style/ButtonText"
        android:backgroundTint="@android:color/holo_green_dark"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:insetLeft="0dp"
        android:textSize="20sp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:text="@string/highscore"
        app:cornerRadius="100dp"
        app:layout_constraintBottom_toTopOf="@+id/butStart"
        app:layout_constraintEnd_toStartOf="@+id/butStart" />

    <Button
        android:id="@+id/butExit"
        style="@style/ButtonText"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:backgroundTint="@color/purple_700"
        android:insetLeft="0dp"
        android:textSize="17sp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:text="@string/exit"
        app:cornerRadius="60dp"
        app:layout_constraintBottom_toTopOf="@+id/butSettings"
        app:layout_constraintEnd_toStartOf="@+id/butSettings" />
</androidx.constraintlayout.widget.ConstraintLayout>
